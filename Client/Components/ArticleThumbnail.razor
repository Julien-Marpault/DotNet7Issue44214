<a href="@($"/catalogue/{Category}/{Model.Slug}")" class="thumbnail">
    <div class=polaroid>
        <img src="@Model.Visual.FileName" width="@Model.Visual.Width" height="@Model.Visual.Height" />
        @if (Options.ShowAddToWishlist || Options.ShowAddToCart)
        {
            <div class="icons">
                @if (Options.ShowAddToWishlist)
                {
                    <div class="addToWishlist" @onclick="AddToWishlist" @onclick:stopPropagation @onclick:preventDefault>
                        @if (AddToWishlistButton != null)
                        {
                            @AddToWishlistButton
                        }
                        else
                        {
                            <svg aria-hidden="true" focusable="false" data-prefix="fal" data-icon="heart" class="svg-inline--fa fa-heart fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                <path fill="currentColor" d="M462.3 62.7c-54.5-46.4-136-38.7-186.6 13.5L256 96.6l-19.7-20.3C195.5 34.1 113.2 8.7 49.7 62.7c-62.8 53.6-66.1 149.8-9.9 207.8l193.5 199.8c6.2 6.4 14.4 9.7 22.6 9.7 8.2 0 16.4-3.2 22.6-9.7L472 270.5c56.4-58 53.1-154.2-9.7-207.8zm-13.1 185.6L256.4 448.1 62.8 248.3c-38.4-39.6-46.4-115.1 7.7-161.2 54.8-46.8 119.2-12.9 142.8 11.5l42.7 44.1 42.7-44.1c23.2-24 88.2-58 142.8-11.5 54 46 46.1 121.5 7.7 161.2z">
                                </path>
                            </svg>
                        }
                    </div>
                }
                @if (Options.ShowAddToCart)
                {
                    <div class="addToCart" @onclick="AddToCart" @onclick:stopPropagation @onclick:preventDefault>
                        @if (AddToCartButton != null)
                        {
                            @AddToCartButton
                        }
                        else
                        {
                            <svg aria-hidden="true" focusable="false" data-prefix="fal" data-icon="shopping-bag" class="svg-inline--fa fa-shopping-bag fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                <path fill="currentColor" d="M352 128C352 57.421 294.579 0 224 0 153.42 0 96 57.421 96 128H0v304c0 44.183 35.817 80 80 80h288c44.183 0 80-35.817 80-80V128h-96zM224 32c52.935 0 96 43.065 96 96H128c0-52.935 43.065-96 96-96zm192 400c0 26.467-21.533 48-48 48H80c-26.467 0-48-21.533-48-48V160h64v48c0 8.837 7.164 16 16 16s16-7.163 16-16v-48h192v48c0 8.837 7.163 16 16 16s16-7.163 16-16v-48h64v272z"></path>
                            </svg>
                        }
                    </div>
                }
            </div>
        }
        <div class="caption">
            @if (Caption != null)
            {
                @Caption
            }
        </div>
    </div>
</a>
